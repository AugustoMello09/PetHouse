pipeline {
    agent any
    stages {
        stage('Build Payment') {
            steps {
                dir('PetHouseBackend/payment') {
                    bat 'mvn clean package -DskipTests=true'
                }
            }
        }
        stage('Build Img Docker') {
            steps {
                script {
                    dir('PetHouseBackend/payment') {
                        bat 'docker build -t augustomello09/pethouse-backend-payment .'
                    }
                }        
            }
        }
    }
}
